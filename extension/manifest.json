{
  "manifest_version": 3,
  "name": "YouTube MQTT Sender",
  "version": "1.0",
  "description": "Extracts YouTube video info and sends it via MQTT.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://*/*",
    "https://*/*",
    "http://localhost:11434/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}